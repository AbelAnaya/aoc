{
	"compilerOptions": {
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
        "moduleResolution": "Node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"removeComments": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ESNext",
        "types": ["node"]
	},
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ],
}
